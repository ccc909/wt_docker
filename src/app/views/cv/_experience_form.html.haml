%div#experience
  %h1 
    Add Experience:
  = form_for @experience, url: create_experience_cv_path(cv_id: @cv.id), id: 'edit-experience', remote: true do |f|

    .form-group
      = f.label :title, "Title", class: 'form-label'
      = f.text_field :title, required: true, class: 'form-control'
    
    .form-group
      = f.label :employer, "Employer", class: 'form-label'
      = f.text_field :employer, required: true, class: 'form-control'

    .form-group
      = f.label :description, "Description", class: 'form-label'
      = f.text_field :description, required: true, class: 'form-control'

    .form-group
      = f.label :started_at, "Started at", class: 'form-label'
      = f.date_field :started_at, required: true, class: 'form-control', id: "experience-started-at"

    .form-group
      = f.label :finished_at, "Finished at", class: 'form-label'
      = f.date_field :finished_at, class: 'form-control', id: "experience-finished-at"
    -# keep the id for started at and finished at, used at comparing dates (finished_at > started_at)
    .checkbox
      = f.check_box :ongoing, class: 'custom-checkbox', onchange: "disableFinishDate(this)"
      = f.label :ongoing, "Ongoing"

    .modal-buttons
      = f.submit "Save", class: "login-button", onclick: "handleFormSubmission(this.form)"

= javascript_include_tag 'cv'


