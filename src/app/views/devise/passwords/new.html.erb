<div class="ext">  
  <div class="wrapper">
    <div class="login-wrapper">
      <div class="content-wrapper">
        <div class="login-container">
          <h1>Forgot your password?</h1>
          <h2>Enter the email adress linked to the account.</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "input-field", placeholder:"Email" %>
            </div>

            <div class="form-actions">
              <%= f.submit "Reset password",class: "login-button" %>
            </div>
          <% end %>

          <!--- <%= render "devise/shared/links" %> ---!>
          </div>
      </div>
    </div>
    <div class="image-wrapper">
      <div class="container-wrapper">
        <h2>Don`t worry!</h2>
        <p>You`ll get your account back in a few moments!</p>
        <%- if controller_name != 'sessions' %>
          <%= link_to "Go Back", new_session_path(resource_name), class: "signin-button" %><br />
        <% end %>


      </div>
    </div>
  </div>

  <div class="page-logo"</div>

</div>
