%div.company#undernav
  %h1
    Add Company information

  = form_for @company_information, url: company_information_index_path, remote: true do |f|

    .form-group
      = f.label :name, class: 'form-label'
      = f.text_field :name, required: true, class: 'form-control'

    .form-group
      = f.label :country, class: 'form-label'
      = f.text_field :country, required: true, class: 'form-control'

    .form-group
      = f.label :address, class: 'form-label'
      = f.text_field :address, required: true, class: 'form-control'

    .form-group
      = f.label :phone_number, class: 'form-label'
      = f.text_field :phone_number, required: true, pattern: "\\d{10}", title: "Please enter a 10-digit phone number", class: 'form-control'

    .modal-buttons
      = f.submit "Add Information", class: "login-button", onclick: "handleFormSubmission(this.form)"
