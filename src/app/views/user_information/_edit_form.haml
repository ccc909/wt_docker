%h1
  Edit your personal information

= form_for @user_information, url: user_information_path(@user_information), remote: true do |f|
  .form-group
    = f.label :first_name, class: 'form-label'
    = f.text_field :first_name, required: true, class: 'form-control', value: @user_information.first_name

  .form-group
    = f.label :last_name, class: 'form-label'
    = f.text_field :last_name, required: true, class: 'form-control', value: @user_information.last_name

  .form-group
    = f.label :country, class: 'form-label'
    = f.text_field :country, required: true, class: 'form-control', value: @user_information.country

  .form-group
    = f.label :county, class: 'form-label'
    = f.text_field :county, required: true, class: 'form-control', value: @user_information.county

  .form-group
    = f.label :city, class: 'form-label'
    = f.text_field :city, required: true, class: 'form-control', value: @user_information.city

  .form-group
    = f.label :address, class: 'form-label'
    = f.text_field :address, required: true, class: 'form-control', value: @user_information.address

  .form-group
    = f.label :phone_number, class: 'form-label'
    = f.text_field :phone_number, required: true, pattern: "\\d{10}", title: "Please enter a 10-digit phone number", class: 'form-control', value: @user_information.phone_number

  .form-group
    = f.label :birthdate, class: 'form-label'
    = f.date_field :birthdate, required: true, class: 'form-control'

  .form-group
    = f.label :sex, class: 'form-label'
    = f.select :sex, [['Select a gender', nil], 'male', 'female', 'other'], required: true, class: 'form-control', value: @user_information.sex


  .modal-buttons
    = f.submit "Update Information", class: "login-button", onclick: "handleFormSubmission(this.form)"

